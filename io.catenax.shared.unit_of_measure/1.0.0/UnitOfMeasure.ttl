@prefix samm: <urn:samm:org.eclipse.esmf.samm:meta-model:2.0.0#>.
@prefix samm-c: <urn:samm:org.eclipse.esmf.samm:characteristic:2.0.0#>.
@prefix samm-e: <urn:samm:org.eclipse.esmf.samm:entity:2.0.0#>.
@prefix unit: <urn:samm:org.eclipse.esmf.samm:unit:2.0.0#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix : <urn:samm:io.catenax.shared.unit_of_measure:1.0.0#>.

:UnitOfMeasure a samm:Aspect;
    samm:preferredName "Unit of Measure"@en;
    samm:description "The aspect may be reused whenever the unit of measure is within demand and supply communications of items."@en;
    samm:properties (:unitOfMeasure :unitOfMeasureTwo);
    samm:operations ();
    samm:events ().
:unitOfMeasure a samm:Property;
    samm:preferredName "Unit of Measure"@en;
    samm:description "Unit of measure commonly used in demand and supply communication of items."@en;
    samm:characteristic :UnitOfMeasureCharacteristic;
    samm:exampleValue "H87".
:UnitOfMeasureCharacteristic a samm-c:Enumeration;
    samm:preferredName "Unit of Measure"@en;
    samm:description "The Enumeration lists a selection of allowed units of measure referenced by their official code according to Codes for Units of Measure Used in International Trade."@en;
    samm:dataType xsd:string;
    samm:see <https://tfig.unece.org/contents/recommendation-20.htm>;
    samm-c:values ("GRM" "KGM" "TNE" "STN" "ONZ" "LBR" "CMT" "MTR" "KTM" "INH" "FOT" "YRD" "CMK" "MTK" "INK" "FTK" "YDK" "CMQ" "MTQ" "INQ" "FTQ" "YDQ" "MLT" "LTR" "HLT" "H87" "SET" "PR" "ZP" "KWH").
:unitOfMeasureTwo a samm:Property;
    samm:preferredName "Unit of Measure"@en;
    samm:description "Unit of measure commonly used in demand and supply communication of items."@en;
    samm:characteristic :UomTrait;
    samm:exampleValue "unit:piece"^^samm:curie.
:UomTrait a samm-c:Trait;
    samm-c:baseCharacteristic samm-c:UnitReference;
    samm-c:constraint :CommonUnitsRegex.
:CommonUnitsRegex a samm-c:RegularExpressionConstraint;
    samm:preferredName "Regular Expressions for common units"@en;
    samm:description "TBD."@en;
    samm:value "^unit\\:(piece|set|pair|page|kilowattHour|kilogram|gram|tonneMetricTon|tonUsOrShortTonUkorus|ounceAvoirdupois|pound|centimetre|metre|kilometre|inch|foot|yard|squareCentimetre|squareMetre|squareInch|squareFoot|squareYard|cubicCentimetre|cubicMetre|cubicInch|cubicFoot|cubicYard|litre|millilitre|hectolitre)$".
